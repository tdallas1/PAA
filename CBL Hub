    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Intersection Observer for animations
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.2
            });
            
            // Observe pillar crests
            document.querySelectorAll('.pillar-crest').forEach(crest => {
                observer.observe(crest);
            });
            
            // Observe program posters
            document.querySelectorAll('.program-poster').forEach(poster => {
                observer.observe(poster);
            });
            
            // Observe featured program
            observer.observe(document.getElementById('featured-program'));
            
            // Add shine effect to featured badge
            const featuredBadge = document.querySelector('.featured-badge');
            if (featuredBadge) {
                featuredBadge.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 0 15px rgba(255,255,255,0.8), 0 0 20px rgba(255,255,255,0.5)';
                });
                
                featuredBadge.addEventListener('mouseleave', function() {
                    this.style.boxShadow = 'var(--shadow)';
                });
            }
            
            // Add rotation animation to crests
            document.querySelectorAll('.pillar-crest').forEach(crest => {
                crest.addEventListener('mouseenter', function() {
                    const currentRotation = window.getComputedStyle(this).getPropertyValue('--rotate');
                    const newRotation = currentRotation === '0deg' ? '2deg' : 
                                       currentRotation === '2deg' ? '-2deg' : 
                                       currentRotation === '-2deg' ? '1deg' : 
                                       currentRotation === '-1deg' ? '1deg' : '0deg';
                    
                    this.style.transform = `translateY(0) rotate(${newRotation})`;
                    this.style.boxShadow = '0 15px 30px rgba(0,0,0,0.15)';
                });
                
                crest.addEventListener('mouseleave', function() {
                    const originalRotation = this.classList.contains('pillar-crest-education') ? '-2deg' :
                                            this.classList.contains('pillar-crest-service') ? '2deg' :
                                            this.classList.contains('pillar-crest-advocacy') ? '-1deg' : '0deg';
                    
                    this.style.transform = `translateY(0) rotate(${originalRotation})`;
                    this.style.boxShadow = 'var(--shadow)';
                });
            });
            
            // Add subtle bounce to program posters
            document.querySelectorAll('.program-poster').forEach(poster => {
                poster.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.boxShadow = '0 15px 30px rgba(0,0,0,0.15)';
                });
                
                poster.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = 'var(--shadow)';
                });
            });
        });
    </script>
